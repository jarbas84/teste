<p id="notice"><%= notice %></p>
</table>
<div class="limiter">
    <div class="container-table100">
      <div class="wrap-table100">
        <div class="table100">
          <table>
            <thead>
              <tr class="table100-head">
                <th>Nome</th>
                <th>Cpf</th>
                <th>Agencia</th>
                <th>Conta</th>
                <th>Saldo</th>
                <th>Acessar:</th>
                <th><%= link_to 'Retornar', root_path, class: "btn btn-warning" %></th>
              </tr>
            </thead>
            <tbody>
              <% @clientes.each do |user| %>
                <tr>
                  <td><%= user.nome %></td>
                  <td><%= user.cpf %></td>
                  <td><%= user.agencia %></td>
                  <td><%= user.conta %></td>
                  <% if user.usuario == 1 %>
                    <td><%= user.saldo%></td>
                    <td><%= link_to 'Editar', edit_user_path(user.id) %></td>
                    <td><%= link_to 'Apagar Conta', user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% else %>
                  <td><span style="color:red">Confidencial</span></td>
                  <% end %>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>