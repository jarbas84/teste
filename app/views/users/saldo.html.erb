<div class="limiter">
    <div class="container-table100">
      <div class="wrap-table100">
        <div class="table100">
          <table>
            <thead>
              <tr class="table100-head">
                <th class="column">Transações</th>
                <th class="column">Saldo Atual</th>
                <th class="column"></th>
                <th class="column"></th>
                <th class="column"></th>
                <th class="column"></th>
                <th class="column"></th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td class="column">Seja bem vindo(a) <%= @saldo['nome'] %></td>
                  <td class="column"><%= @saldo['saldo'] %> Reais</td>
                  <td class="column"><%= link_to 'Saque', saque_path(:valor_total => @saldo), method: :post, class: "btn btn-success" %></td>
                  <td class="column"><%= link_to 'Depósito', deposito_path(:valor_total => @saldo), method: :post, class: "btn btn-warning" %></td>
