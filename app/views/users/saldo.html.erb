                  <td class="column"><%= link_to 'Extrato', extratos_path(:dados => @saldo), method: :post, class: "btn btn-light" %></td>
                  <td class="column"><%= link_to 'Sair', sair_path, method: :delete, class: "btn btn-danger" %></td>
                </tr>        
            </tbody>
          </table>
        </div>
      </div>
    </div>
