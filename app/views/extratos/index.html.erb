<p id="notice"><%= notice %></p>
<% if !params[:filtro].present? %>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <%= form_for :filtro, url: extratos_path, method: :post do |f|%>
          <th scope="col"> Insira Data Inicial (Menor Data) <%= f.date_field :dInicio, autofocus: true %></th>
          <th scope="col"> Insira Data Final (Maior Data) <%= f.date_field :dFinal %></th>
          <%= hidden_field_tag 'dados',  @extrato %>
          <%= hidden_field_tag 'extratoId',  @extratoId %>
          <th scope="col"></th>
          <th scope="col"><%= f.submit "Filtre Por Datas (Insira as Duas Datas)" %></th>
        <% end %>
      </tr>
    </thead>
  </table>
<% end %>
<table class="table table-striped table-dark">
  <thead>
    <tr>
        <th scope="col"><%= link_to 'Retornar', saldo_path(:user_id => @extratoId), method: :post, class: "btn btn-light btn-lg btn-block" %></th>
    </tr>
  </thead>
</table>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @extratos.each do |extrato| %>
      <tr>
        <td><%= extrato.historico %></td>
        <td><%= extrato.created_at.strftime("%d/%m/%y - %H:%M") %></td>
        <% if !1 == 1 %>
        <td><%= link_to 'Show', extrato %></td>
        <td><%= link_to 'Edit', edit_extrato_path(extrato) %></td>
        <td><%= link_to 'Destroy', extrato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%= link_to 'New Extrato', new_extrato_path %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
